{
  "name": "qulacs-wasm",
  "version": "0.0.1",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "init": "npm run submodule:clone-recursive && npm run submodule:qulacs:wasm-optimization",
    "submodule:clone-recursive": "git submodule update --init --recursive",
    "submodule:qulacs:wasm-optimization": "node script/updateSubmoduleQulacs.js",
    "submodule:build": "npm run submodule:boost:build && npm run submodule:qulacs:build",
    "submodule:boost:build": "cd ./submodules/boost && ./bootstrap.sh && ./b2 headers && cd ../../",
    "submodule:qulacs:build": "npm run submodule:qulacs:build:gcc && npm run submodule:qulacs:build:emranlib",
    "submodule:qulacs:build:gcc": "cd ./submodules/qulacs && ./script/build_gcc.sh && cd ../../",
    "submodule:qulacs:build:emranlib": "cd ./submodules/qulacs/lib && emranlib libcppsim_static.a && emranlib libcsim_static.a && emranlib libvqcsim_static.a",
    "build": "npm run build:tsc && npm run build:emscripten",
    "build:tsc": "tsc -p .",
    "build:emscripten": "mkdir -p lib-cpp/ && npm run build:emscripten:em++ && npm run build:emscripten:cp",
    "build:emscripten:em++": "em++ -O2 -I ./submodules/qulacs/include -I ./submodules/Boost -L ./submodules/qulacs/lib -o ./lib-cpp/module.js ./src-cpp/QulacsClient.cpp -lvqcsim_static -lcppsim_static -lcsim_static -s MODULARIZE=1 -s 'EXPORT_NAME=\"ModuleQulacsWasm\"' --bind -s DISABLE_EXCEPTION_CATCHING=0",
    "build:emscripten:em++2": "em++ -O2 -I ../qulacs/include -I ./submodules/Boost -L ../qulacs/lib -o ./lib-cpp/module.js ./src-cpp/QulacsClient.cpp -lvqcsim_static -lcppsim_static -lcsim_static -s MODULARIZE=1 -s 'EXPORT_NAME=\"ModuleQulacsWasm\"' --bind -s DISABLE_EXCEPTION_CATCHING=0",
    "build:emscripten:cp": "cpx \"./lib-cpp/**\" \"./lib/wasm/\" --clean",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "kamakiri01",
  "license": "MIT",
  "devDependencies": {
    "@types/emscripten": "^1.39.6",
    "@types/node": "^18.11.3",
    "cpx": "^1.5.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
  }
}
